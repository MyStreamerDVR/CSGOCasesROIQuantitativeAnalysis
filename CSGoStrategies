    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const casePriceInput = document.getElementById('casePrice');
            const avgValueInput = document.getElementById('avgValue');
            const keyPriceInput = document.getElementById('keyPrice');
            const roiValueSpan = document.getElementById('roiValue');

            function calculateROI() {
                const casePrice = parseFloat(casePriceInput.value) || 0;
                const avgValue = parseFloat(avgValueInput.value) || 0;
                const keyPrice = parseFloat(keyPriceInput.value) || 0;
                
                const totalCost = casePrice + keyPrice;
                
                if (totalCost === 0) {
                    roiValueSpan.textContent = '0.00%';
                    return;
                }

                const roi = (avgValue / totalCost) * 100;
                roiValueSpan.textContent = roi.toFixed(2) + '%';
                
                if (roi >= 70) {
                    roiValueSpan.style.color = '#2ecc71'; // Green
                } else if (roi >= 50) {
                    roiValueSpan.style.color = '#f1c40f'; // Yellow
                } else {
                    roiValueSpan.style.color = '#e74c3c'; // Red
                }
            }

            casePriceInput.addEventListener('input', calculateROI);
            avgValueInput.addEventListener('input', calculateROI);
            
            calculateROI(); // Initial calculation on page load
        });
    </script>

